

<div class="ibox-content sign_in" style="min-height: 500px">
  <h3 class="h3_signin">サインイン</h3>

  <% form_for(:session, :url => sessions_path) do |f| -%>


    <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
    <% end %>

    <div class="form-group m-t">
      <%= f.label 'メール:' %><br />
      <%= f.text_field :email, :class => "inputform", :maxlength => 50 %>
    </div>

    <div class="form-group"> 
      <%= f.label 'パスワード:' %><br />
      <%= f.password_field :password, :class => "inputform", :maxlength => 20 %>
    </div>



      <span class="" ><%= f.check_box :remember_token %><%= f.label 'ログイン状態を保持する' %></span>
     


    <div class="form-group"><%= f.submit "サインイン", :class=>"btn_signin" %> <%= link_to "パスワードを忘れましたか", new_password_reset_token_path, :id => "forget_pw" %></div>
    <p>アカウントをお持ちでない場合は？
        <%= link_to "登録", 'sign_up_path' , :id=>"register" %>
    </p>
  <% end -%>

</div>