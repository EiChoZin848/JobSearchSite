<div class="ibox-content sign_up_jobseeker" style="min-height: 500px">
  <h3 class="lbl_jobseeker_sign_up">無料の求職者アカウントを作成する</h3>
  <p>雇うことを探していますか。
  <%= link_to "雇用主として登録する。", new_employer_path , :id=>"lnk_jobseeker_signup" %>
  </p>

  <% form_for(@jobseeker) do |f| -%>
    
    <%= render 'shared/error_messages' %>

    <div class="form-group m-t">
      <%= f.label '名前:' %><span class="star"> *</span><br />
      <%= f.text_field :name , :class => "inputform", :maxlength => 30 %>
    </div>
    
    <div class="form-group m-t">
      <%= f.label 'メール:' %><span class="star"> *</span><br />
      <%= f.text_field :email,:class => "inputform", :maxlength => 50%>
    </div>

    <div class="form-group"> 
      <%= f.label 'パスワード:' %><span class="star"> *</span><br />
      <%= f.password_field :password, :class => "inputform" , :maxlength => 20%>
    </div>

    <div class="form-group"> 
      <%= f.label '確認のパスワード：' %><span class="star"> *</span><br />
      <%= f.password_field :password_confirmation, :class => "inputform", :maxlength => 20 %>
    </div>

    <div class="form-group"><%= f.submit "登録", :class=>"btn_signup" %></div>
  <% end -%>

</div>